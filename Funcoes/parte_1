def exibir_mensagem():
    print("Olá mundo")

def exibir_mensagem_2(nome):
    print(f"Seja bem vindo {nome}!")

def exibir_mensagem_3(nome = "Anonimo"):
    print(f"Seja bem vindo {nome}!")    

exibir_mensagem()
exibir_mensagem_2(nome="Anonimo")
exibir_mensagem_3(nome = "Borges")   

def calcular_total(numeros):
    return sum(numeros)
def retorna_antecessor_sucessor(numero):
    antecessor = numero - 1
    sucessor = numero + 1

    return antecessor, sucessor
print(calcular_total([10,20,34]))
print(retorna_antecessor_sucessor(10))

def somar(a, b):
    return a + b

def subtracao(a,b):
    return a - b

def exibir_resultado(a,b,funcao):
    resultado = funcao(a,b)
    print(f"O resultado da operacao é = {resultado}")
exibir_resultado(10, 10, somar)
exibir_resultado(10, 10, subtracao)

op = somar
print("Testando outra maneira de somar ", op(1,10))

